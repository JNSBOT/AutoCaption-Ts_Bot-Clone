{
  "name": "JNS AutoCaption ",
  "description": "Telegram auto caption bot. Create your Fork now.",
  "keywords": [
    "telegram",
    "best",
    "auto",
    "caption" 
  ],
  "success_url": "https://github.com/Ts-Bots/AutoCaption-Ts_Bot-Clone",
  "website": "https://github.com/Ts-Bots/AutoCaption-Ts_Bot-Clone",
  "repository": "https://github.com/Ts-Bots/AutoCaption-Ts_Bot-Clone",
  "logo": "https://telegra.ph/file/1a9c62a5fd9d764ab3d0e.jpg",
  "env": {
    "WEBHOOK": {
      "description": "Setting this to ANYTHING will enable webhooks when in env mode",
      "value": "ANYTHING"
    },
    "TG_BOT_TOKEN": {
      "description": "Your bot token, as a string.",
      "value": ""
    },
    "APP_ID": {
      "description": "Get this value from @JNS_tg_orgbot",
      "value": ""
    },
    "API_HASH": {
      "description": "Get this value from @JNS_tg_orgbot",
      "value": ""
    },
    "ADMIN_ID": {
      "description": "Your user ID like 1234567890 @JNS_id_finderbot",
      "value": ""      
    },
    "CAPTION_POSITION": {
      "description": "Position of your caption [Enter top or bottom or nil]",
      "value": "nil"
    },
    "ADMIN_USERNAME": {
      "description": "Admin username without [@], Default will be jns_bots",
      "value": "jns_bots", 
      "required": false
    }        
    
  },
  "addons": [
    {
    "plan": "heroku-postgresql",
      "options": {
        "version": "12"
      }
    }
  ],
  "buildpacks": [{
    "url": "heroku/python"
  }],
  "formation": {
    "worker": {
      "quantity": 1,
      "size": "free"
    }
  }
}
